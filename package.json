{
    "name": "git-tslint",
    "version": "1.0.0",
    "description": "tslint before git hooks",
    "main": "index.ts",
    "author": "Bruce yan",
    "license": "MIT",
    "scripts": {
        "start": "node src/index.ts",
        "test": "ts-mocha test/index.ts"
    },
    "bin": {
        "git-tslint-init": "./src/index.ts"
    },
    "keywords": [
        "pre-commit",
        "commit-lint",
        "eslint",
        "tslint",
        "prettier"
    ],
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "ts-mocha": "^6.0.0"
    },
    "dependencies": {
        "@commitlint/cli": "^7.3.1",
        "@commitlint/config-conventional": "^7.3.1",
        "@types/node": "^12.7.5",
        "@typescript-eslint/eslint-plugin": "^2.3.0",
        "@typescript-eslint/parser": "^2.3.0",
        "commitizen": "^3.0.5",
        "conventional-changelog": "^3.0.5",
        "conventional-changelog-cli": "^2.0.11",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.12.0",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3",
        "typescript": "^3.6.3"
    },
    "lint-staged": {
        "*.{js,jsx,json,ts,css,sass,scss,less,md,vue}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
